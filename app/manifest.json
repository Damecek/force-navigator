{
    "name": "Salesforce Navigator for Lightning",
    "version": "1.6.3",
    "manifest_version": 2,
    "default_locale": "en",
    "browser_action": {
        "default_icon": "images/sfnav-48.png"
    },
    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "persistent": true
    },
    "icons": {
        "16": "images/sfnav-16.png",
        "48": "images/sfnav-48.png",
        "128": "images/sfnav-128.png"
    },
    "web_accessible_resources": [
        "images/ajax-loader.gif",
        "images/sfnav-128.png"
    ],
    "description": "This extension helps you get to any Salesforce page quickly. Just type in what you need to do!",
    "content_scripts": [
        {
            "css": [
                "styles/main.css"
            ],
            "matches": [
                "https://*.force.com/*",
                "https://*.salesforce.com/*",
                "https://*.cloudforce.com/*"
            ],
            "all_frames": true,
            "js": [
                "scripts/jquery.js",
                "scripts/mousetrap.min.js",
                "scripts/forceTooling.js",
                "scripts/pluralize.js",
                "scripts/main.js",
                "scripts/popup.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "https://*.force.com/*",
        "https://*.salesforce.com/*",
        "https://*.cloudforce.com/*",
        "storage",
        "cookies"
    ]
}